{
  "private": true,
  "scripts": {
    "prebuild": "rm -rf dist .cache .parcel-cache",
    "fix-assets": "mkdir -p distribution && rm -rf distribution/assets && cp -r assets distribution/assets",
    "build": "parcel build manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0 && npm run fix-assets",
    "lint-fix": "run-p 'lint:* -- --fix'",
    "lint:js": "xo",
    "test": "run-p lint:* build",
    "watch": "npm run fix-assets && parcel watch manifest.json --dist-dir distribution --no-cache --no-hmr"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ],
  "xo": {
    "semicolon": false,
    "space": true,
    "envs": [
      "browser"
    ],
    "extends": "xo-react",
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "browser"
        }
      ],
      "unicorn/prefer-module": "off",
      "no-trailing-spaces": "warn",
      "capitalized-comments": "off",
      "unicorn/filename-case": "off",
      "import/extensions": "off",
      "node/file-extension-in-import": "off",
      "object-curly-spacing": "off",
      "generator-star-spacing": [
        "error",
        {
          "before": false,
          "after": true,
          "anonymous": "neither",
          "method": {
            "before": true,
            "after": true
          }
        }
      ],
      "unicorn/numeric-separators-style": "off",
      "react/jsx-tag-spacing": [
        "error",
        {
          "beforeSelfClosing": "always"
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "arrow-parens": "off",
      "unicorn/prevent-abbreviations": "off",
      "default-param-last": "off",
      "unicorn/no-abusive-eslint-disable": "off",
      "react/boolean-prop-naming": "off",
      "react/jsx-no-bind": [
        "error",
        {
          "allowArrowFunctions": true,
          "allowFunctions": true
        }
      ],
      "react/button-has-type": "off",
      "max-params": [
        "error",
        5
      ]
    }
  },
  "dependencies": {
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "axios": "^0.24.0",
    "classnames": "^2.3.1",
    "dayjs": "^1.10.7",
    "i18n-iso-countries": "^7.2.0",
    "lodash": "^4.17.21",
    "postcss": "^8.4.5",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-flagkit": "^2.0.4",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "redux": "^4.1.2",
    "redux-auth-wrapper": "^3.0.0",
    "redux-saga": "^1.1.3",
    "tailwindcss": "^2.2.19",
    "webext-options-sync": "^2.0.1",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@parcel/config-webextension": "^2.1.1",
    "@parcel/transformer-image": "^2.1.1",
    "autoprefixer": "^10.4.2",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.1.1",
    "postcss-import": "^14.0.2",
    "xo": "^0.44.0"
  },
  "webExt": {
    "sourceDir": "distribution"
  }
}
